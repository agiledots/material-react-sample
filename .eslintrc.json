{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:react/recommended"
        // "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent":               [ "error", 2 ],
        "quotes":               [ "error", "single" ],
        "eol-last":             [ "error" ],
        "semi":                 [ "error", "never" ],
        "react/prop-types":     0,
        "object-curly-spacing": [ "error", "always" ] 
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }  
}